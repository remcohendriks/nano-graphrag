# FastAPI Configuration
API_PREFIX=/api/v1
API_TITLE=nano-graphrag API
API_VERSION=1.0.0
# For multiple origins use JSON array: ALLOWED_ORIGINS='["http://localhost:3000","http://localhost:8080"]'
ALLOWED_ORIGINS=*

# Performance
MAX_QUERY_TIMEOUT=300
MAX_CONCURRENT_INSERTS=10
MAX_BATCH_SIZE=100  # Maximum documents per batch (native batch processing for optimal performance)
LLM_MAX_CONCURRENT=8  # Maximum parallel LLM calls (also controls document parallelism)

# Storage Backends
GRAPH_BACKEND=neo4j
VECTOR_BACKEND=qdrant
KV_BACKEND=redis
WORKING_DIR=./api_working_dir

# Neo4j Configuration
NEO4J_URL=neo4j://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=password  # Change this in production!
NEO4J_DATABASE=neo4j

# Qdrant Configuration
QDRANT_URL=http://localhost:6333
# QDRANT_API_KEY=your-api-key-if-needed

# Redis Configuration
REDIS_URL=redis://localhost:6379
# REDIS_PASSWORD=your-redis-password-if-needed
REDIS_JOB_TTL=604800  # Job retention in seconds (default: 7 days)

# LLM Configuration
LLM_PROVIDER=openai
LLM_MODEL=gpt-5-mini
EMBEDDING_PROVIDER=openai
EMBEDDING_MODEL=text-embedding-3-small

# OpenAI API Key (required)
OPENAI_API_KEY=sk-...