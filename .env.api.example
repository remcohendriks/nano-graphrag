# FastAPI Configuration
API_PREFIX=/api/v1
API_TITLE=nano-graphrag API
API_VERSION=1.0.0
ALLOWED_ORIGINS=*

# Performance
MAX_QUERY_TIMEOUT=300
MAX_CONCURRENT_INSERTS=10
MAX_BATCH_SIZE=100

# Storage Backends
GRAPH_BACKEND=neo4j
VECTOR_BACKEND=qdrant
KV_BACKEND=redis
WORKING_DIR=./api_working_dir

# Neo4j Configuration
NEO4J_URL=neo4j://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=your-secure-password-change-me
NEO4J_DATABASE=neo4j

# Qdrant Configuration
QDRANT_URL=http://localhost:6333
# QDRANT_API_KEY=your-api-key-if-needed

# Redis Configuration
REDIS_URL=redis://localhost:6379
# REDIS_PASSWORD=your-redis-password-if-needed

# LLM Configuration
LLM_PROVIDER=openai
LLM_MODEL=gpt-5-mini
EMBEDDING_PROVIDER=openai
EMBEDDING_MODEL=text-embedding-3-small

# OpenAI API Key (required)
OPENAI_API_KEY=sk-...