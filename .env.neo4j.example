# Neo4j Configuration for nano-graphrag
# Copy this file to .env.neo4j and update with your values

# Neo4j Connection
NEO4J_URL=neo4j://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=your-secure-password-change-me
NEO4J_DATABASE=neo4j

# Production Tuning (optional - defaults shown)
NEO4J_MAX_CONNECTION_POOL_SIZE=50
NEO4J_CONNECTION_TIMEOUT=30.0
NEO4J_MAX_TRANSACTION_RETRY_TIME=30.0
NEO4J_BATCH_SIZE=1000

# Optional: Custom namespace for graph nodes (default: GraphRAG_{namespace})
# NEO4J_GRAPH_NAMESPACE=MyProject

# TLS Configuration (auto-detected from URL)
# Use neo4j+s:// for TLS-enabled connections
# NEO4J_ENCRYPTED=true

# Graph Storage Backend
STORAGE_GRAPH_BACKEND=neo4j

# Optional: Other storage backends
STORAGE_VECTOR_BACKEND=nano
STORAGE_KV_BACKEND=json